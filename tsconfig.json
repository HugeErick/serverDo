{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "esModuleInterop": true,                                 
    "forceConsistentCasingInFileNames": true,    
    "strict": true,                                       
    "skipLibCheck": true                                  
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
